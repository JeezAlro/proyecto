@import "nib"
@import "normalize.styl"
@import "style.styl"

body
	background white
	font-size 16px
	font-family 'Open Sans', sans-serif
	color #434343

figure 
	margin 0
img
	vertical-align top

ul
	margin 0
	padding 0
li
	list-style none
a
	font-family 'Open Sans', sans-serif
	text-decoration none
	display block

.adsbygoogle
	width 120px
	height 600px
	text-align center
	position relative
	margin-top 30px
	margin-left 10%
	background #2a80b9
	&:before
		content "Patrocinado"
		height 30px
		position absolute
		display block
		color white
		bottom 100%
		left 0
		right 0
		background #2a80b9
		z-index 10	


//modos

.radius	
	border-radius 60%
	overflow hidden
.center
	text-align center
.relative
	position relative
.absolute
	position absolute
.active
	display block	
.none
	display none
.borders
	border 5px solid #bec3c7
.bordern
	border 2px solid #bec3c7
.bazulclaro
	border-color #3598dc
.bloque
	overflow hidden
	margin 0 auto
	margin-top .4em
	padding .5em
	display block
.center
	text-align center

//botones
.btn
	display inline-block
	padding .5em
	background black
	color #fff
.btnlogin
.btnsignin
	margin-top 1px
	margin-right 4px
	padding .7em 1.2em
.btnlogin
	font-weight:  bold;
	background #2dcb6f
	border-bottom 4px solid #26ac5f
	transition all .3s
	opacity .9
	&:hover
		opacity 1

//Header

.header
	background #bec3c7

//logo
.logo
	background #ecf0f1
	float left
	height 3.1em
	position relative
	width 40%
	&:before
		border-right 50px solid transparent
		border-top 50px solid #ecf0f1
		content ""
		display inline-block
		left 100%
		position absolute
		top 0
		z-index 4
.logof
	margin 0 0 0 .4em 
	width 6em
	z-index 5
	float left
	position relative
	display inline-block
	vertical-align middle
	img
		height 40px

//menu de notificaciones	
.userMenu
	background #34495e
	float right
	height 3.1em
	text-align right
	width 60%
.menu	
	float right
	
	padding 0 .3em
	
.notificaciones
	float left
	vertical-align middle	
.notificacion
	color white
	float left
	font-size 1.5em
	margin 0
	padding .55em .2em
	position relative
	&:hover
		background rgba(0,0,0,.5)
.noti
	background #e23130
	border-radius 3px
	font-size .6em
	padding .1em
	position absolute
	right 2px
	top 2px
.pop
	display none
	background #1a242f
	width 100%
	height 268px
	overflow-y scroll
	position relative
	z-index 10
	clear both
.mesaje
	padding 4px
	height 65px
	margin 5px 0
	background #fff
	border-bottom 1px solid #ecf0f1
	&:hover
		background  #ecf0f1
.emisor
	display inline-block
	vertical-align middle
.mmisor
	color #434343
	vertical-align top
	width 200px
	overflow hidden
	height 65px
	display inline-block
	&:active
		color #434343
		 
	
//menu de usurio
.miavatar
	border 2px solid white
	border-radius 50%;
	float left
	height 36px;
	margin-top .3em
	overflow hidden
	padding 0
	width 36px;
	.submenu
		display none
.menuUser
	background #434343
	clear  both
	display none
.opciones
	color white
	display block
	padding .6em
	text-align center
	transition background .3s
	&:hover
		background rgba(0, 0, 0, .5)
//bucar
.busqueda
	overflow hidden
	padding .4em
	clear both
.buscar
	display inline-block
	width 85%
	.text 
		border none
		border-radius 5px
		box-sizing border-box
		color #434343
		padding .3em 1.5em .3em 1.5em
		width 100%;
		&:focus
			outline none
.iconobuscar
	color #434343
	font-size 1.25em
	margin .3em .1em
	right 0
	top 0
.iconodelete
	color #434343
	font-size 1.25em
	left 0
	margin .3em .1em
	top 0
		
.menuMobil
	background #434343
	color white
	float right
	font-size 1.25em
	padding .4em
	vertical-align top

.categoriasMobil
	background #434343
	display none
	clear  both	

.categoriasDesktop
		background #434343
		display none
		clear  both	
		position relative
		margin 0 auto
		overflow hidden

		li
			float left
			width 20%
			.opciones
				color width
				display block
				padding .6em
				text-align center
.mejoresVendedores
	margin-top .4em

.avatarvendedores	
	margin-top .4em
	margin-bottom .4em
	width 100%;
	height 95px
	overflow hidden
	text-align center

.title
	width 80%
	height 2.18em
	background #0082bd
	margin 0
	padding 0 .4em
	font-weight normal
	color white
	line-height 2.18em
	&:before
		content ""
		position absolute
		left 99.95%
		border-bottom 41px solid #0082bd
		border-right  42px solid transparent
.mejores
	width 80px
	height 80px
	display inline-block
	.vendedorn
		background rgba(190, 195, 199, .75)
		top 80px
		left 0
		right 0
		text-align center
		line-height 80px
		transition top .3s
		color #434343
	&:hover 
		.vendedorn 
			top 0px
.producto
	background #ecf0f1
.grid
	overflow hidden
	display inline-block
	min-height 234px
	margin-bottom 10px
	margin-right 1%
	&.small
		width 45%
		&:nth-child(even)
			margin-right 0
.nombre
	color #3598dc
	margin 0 
	padding 0
	font-weight normal
	font-size 1.25em
.estado
.envio
.vendedor
.ubicacion	
	font-size .8em
	margin 0
	padding 0
.precio
	font-weight bold
	margin 0
.agregar
	right 1em
	top 0
	color #e64b3a

.infop
	padding .2em
.atributo
	color #3598dc
	font-style italic
	display inline-block
.imagenp
	width 100%

.bronce
.plata
.oro
	background url('../img/medallap.png')
	width 27px
	height 26px
	position absolute
	top 0
	right .4em 
.bronce
	background-position 0 0
.plata
	background-position -27px 0
.oro
	background-position -54px 0
.footer
	background #0082bd
	padding 2em 0em 40px 0em
	position absolute
	left 0
	right 0
	overflow hidden
.contacto
	float right
	a 
		text-align left
		font-size 1em
		padding .5em
		color white
		font-family 'Open Sans', sans-serif,icomoon
	& a:first-child
		text-align center
		color white
.footerCategorias
	float left
	color white
	text-align center
.categoriasFooter
	width auto
	color white
	li 
		display inline-block
		.opciones
			text-align left
			display inline-block		
.pie
	background #212121
	height 40px
	position absolute
	bottom 0
	left 0
	right 0
	text-align center
	.opciones
		display inline-block
@media screen and (min-width:480px)
	.logof
		width 146px
		img
			height 50px
	.bronce
	.plata
	.oro
		background url('../img/medallam.png')
		width 40px
		height 38px
		position absolute
		top 0
		right .4em 
	.bronce
		background-position 0 0
	.plata
		background-position -40px 0
	.oro
		background-position -80px 0

	.adsbygoogle
		width 160px
		height 600px
		position relative
	  
	.ase
		padding 0%
		width 160px
		height 60px
		text-align center
		margin 0 auto
		position relative
	.nombre
		font-weight normal
		font-size 1.5em
	.estado
	.envio
	.vendedor
	.ubicacion	
		font-size 1em
		margin 0
		padding 0
	.precio
		font-weight bold
		margin 0
		font-size 1.25em
	.mmisor
		vertical-align top
		width 320px
		overflow hidden
		height 65px
		display inline-block

	.footer
		padding 2em 1em 0em 1em
	.contacto
		float right
		a 
			font-size 1.25em
@media screen and (min-width:1000px)
	.categoriasMobil
		display none
		.opciones
			display none
			float left
	.categoriasDesktop
		display block
	.menuUser
		position absolute
		right 0
		top 50px
		background #34495e
		z-index 2
		width 200px
		.opciones
			text-align left
			padding .5em 1em
	.avatarvendedores
		height 135px		
	.mejores
		width 120px
		height 120px
		display inline-block
		.vendedorn
			top 120px
			left 0
			right 0
			text-align center
			line-height 120px
			transition top .3s
			color #434343
		&:hover 
			.vendedorn 
				top 0px
	.bronce
	.plata
	.oro
		background url('../img/medallal.png')
		width 80px
		height 76px
		position absolute
		top 0
		right .4em 
	.bronce
		background-position 0 0
	.plata
		background-position -80px 0
	.oro
		background-position -160px 0

	.grid
		display inline-block
		&.large
			width 31%
			margin-right 1.4%
			margin-bottom 1em
			&:nth-child(even)
				margin-right 0
	.adsbygoogle
		width 300px
		height 600px
		position relative
		&.ase
			padding 10%
			width 970px
			height 60px
			text-align center
			margin 0 auto
			position relative
	.menuMobil 
		display none
	.logo
		width 20%
	.userMenu
		width 30%
		&:before
			content ""
			border-top 50px solid transparent
			border-right 50px solid #34495e
			display inline-block
			position absolute
			right 100%

	.busqueda 
		clear none
		text-align center

	.title
		width 50%
		height 42px
		margin 0 auto
		text-align center
		&:before
			border-top 21px solid #0082bd
			border-right 20.5px solid transparent
			border-bottom 21px solid #0082bd
		&:after
			content ""
			display inline-block
			border-top 21px solid #0082bd
			border-left 20.5px solid transparent
			border-bottom 21px solid #0082bd
			position absolute
			right 100%
	.pop
		padding .5em
		background #fff
		display none
		border-radius 10px
		border 5px solid #1a242f
		top 50px
		right 10px
		width 430px
		background white
		color gray
		position absolute
		z-index 10
		clear both
	.mmisor
		vertical-align top
		width 320px
		overflow hidden
		height 65px
		display inline-block
	.mas 
		display inline-block
	.footerCategorias
		margin 0 auto
		width 800px
		color white
